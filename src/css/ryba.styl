
html, body
  font-size 13px

#launch.right.button
  height auto
  left -1px
  overflow hidden
  position fixed
  top 50%
  transition width 0.3s ease 0s, transform 0.5s ease 0s
  white-space nowrap
  width 55px
  .icon
    margin-left: 0px;
  &:hover
    width 130px
    .text
      opacity 1
  .text
    left: 54px
    opacity: 0
    position: absolute;
    top: auto;
    transition: opacity 0.3s ease 0.3s;
    white-space: nowrap;

#header
  transition height 2s
  // height 100px
  background-color rgba(0,0,0,0.85)
  .container
    margin .2rem auto
    .item.logo
      width 20%
      img
        top -30px
        position absolute
    .item.intro
      width 80%
      text-align center
  &.small
    transition height 2s
    // height 10px
    .item.logo
      width 10%
      img
        top -10px
    .item.intro p
      display none
#content
  .main.title
    position relative
    background-color #fff
    padding-top 10rem
    .container
      padding 0 2em
      // h1
      //   padding 0.5em 0
  .main.content.container
    padding 2em 2em 10em
    background-color #fff
    .page
      position relative
    .accordion pre
      margin-top 0
      .hljs
        padding 2em 1em
    // .ui.header
    // .ui.page
    //   padding 0 1em
  .following.menu
    padding-top 2em

.container
  position relative
  margin 0 auto
  right 128px
  padding 0 2em

.toc
  .inverted.header
    color rgba(255, 255, 255, 0.8)
    font-size .8em
    line-height 1em
    font-weight normal
  .modules.item
    padding-top 0
    padding-bottom 0


@media only screen and (max-width : 600px)
  #ryba .container
    width auto
    .ui.secondary.menu
      display none
@media only screen and (min-width : 600px) and (max-width : 680px)
  #ryba .container
    width auto
    .ui.secondary.menu
      display none
@media only screen and (min-width : 680px) and (max-width: 998px)
  #ryba .container
    width 680px
  #header
    p
      font-size 1.5em
@media only screen and (min-width : 998px) and (max-width: 1200px)
  #ryba .container
    width 720px
  #header
    p
      font-size 1.8em
@media only screen and (min-width : 1200px) and (max-width: 1355px)
  #ryba .container
    width 765px
  #header
    p
      font-size 2em
